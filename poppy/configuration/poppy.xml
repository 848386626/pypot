<Robot name="Poppy">
    
    <DxlController port="COM6" sync_read="True">

        <DxlMotorGroup name="legs">
        
            <DxlMotorGroup name="l_leg">
                <!-- Left Leg -->
                <DxlMotor name="l_hip_x" type="MX-28" id="11" orientation="direct" offset="0.0">
                    <angle_limits>(-12, 37)</angle_limits>
                </DxlMotor>
                <DxlMotor name="l_hip_z" type="MX-28" id="12" orientation="indirect" offset="-22.5">
                    <angle_limits>(-2, 40)</angle_limits>
                </DxlMotor>
                <DxlMotorGroup name="l_leg_sagitall">
                    <DxlMotor name="l_hip_y" type="MX-64" id="13" orientation="direct" offset="2.0">
                        <angle_limits>(-105, 85)</angle_limits>
                    </DxlMotor>
                    <DxlMotor name="l_knee_y" type="MX-28" id="14" orientation="direct" offset="0.0">
                        <angle_limits>(-2, 120)</angle_limits>
                    </DxlMotor>
                    <DxlMotor name="l_ankle_y" type="MX-28" id="15" orientation="direct" offset="0.0">
                        <angle_limits>(-45, 60)</angle_limits>
                    </DxlMotor>
                </DxlMotorGroup>
            </DxlMotorGroup>

            <DxlMotorGroup name="r_leg">
                
                <DxlMotor name="r_hip_x" type="MX-28" id="21" orientation="direct" offset="0.0">
                    <angle_limits>(-39, 10)</angle_limits>
                </DxlMotor>
                <DxlMotor name="r_hip_z" type="MX-28" id="22" orientation="indirect" offset="22.5">
                    <angle_limits>(-40, 2)</angle_limits>
                </DxlMotor>
                
                <DxlMotorGroup name="r_leg_sagitall">
                    <DxlMotor name="r_hip_y" type="MX-64" id="23" orientation="indirect" offset="0.0">
                        <angle_limits>(-85, 105)</angle_limits>
                    </DxlMotor>
                    <DxlMotor name="r_knee_y" type="MX-28" id="24" orientation="indirect" offset="0.0">
                        <angle_limits>(-120, 2)</angle_limits>
                    </DxlMotor>
                    <DxlMotor name="r_ankle_y" type="MX-28" id="25" orientation="indirect" offset="0.0">
                        <angle_limits>(-60, 45)</angle_limits>
                    </DxlMotor>
                </DxlMotorGroup>
                
            </DxlMotorGroup>
        </DxlMotorGroup>

    </DxlController>

    <DxlController port="COM7" sync_read="True">
        
        <DxlMotorGroup name="torso">
            <!-- Torso -->
            <DxlMotor name="abs_y" type="MX-28" id="31" orientation="indirect" offset="0.0">
                <angle_limits>(-39, 16)</angle_limits>
            </DxlMotor>
            <DxlMotor name="abs_x" type="MX-28" id="32" orientation="indirect" offset="0.0">
                <angle_limits>(-35, 35)</angle_limits>
            </DxlMotor>
            <DxlMotor name="abs_z" type="MX-28" id="33" orientation="direct" offset="0.0">
                <angle_limits>(-80, 80)</angle_limits>
            </DxlMotor>
            <DxlMotor name="bust_y" type="MX-28" id="34" orientation="indirect" offset="0.0">
                <angle_limits>(-49, 22)</angle_limits>
            </DxlMotor>
            <DxlMotor name="bust_x" type="MX-28" id="35" orientation="indirect" offset="0.0">
                <angle_limits>(-30, 30)</angle_limits>
            </DxlMotor>
        </DxlMotorGroup>

        <DxlMotorGroup name="head">
            <!-- Head -->
            <DxlMotor name="head_z" type="AX-12" id="36" orientation="direct" offset="0.0">
                <angle_limits>(-100, 100)</angle_limits>
            </DxlMotor>
            <DxlMotor name="head_y" type="AX-12" id="37" orientation="indirect" offset="10.0">
                <angle_limits>(-40, 8)</angle_limits>
            </DxlMotor>
        </DxlMotorGroup>

        <DxlMotorGroup name="arms">
            <DxlMotorGroup name="l_arm">
                <!-- Left Arm -->
                <DxlMotor name="l_shoulder_y" type="MX-28" id="41" orientation="direct" offset="67.5">
                    <angle_limits>(-150, 150)</angle_limits>
                </DxlMotor>
                <DxlMotor name="l_shoulder_x" type="MX-28" id="42" orientation="indirect" offset="-90">
                    <angle_limits>(-95, 95)</angle_limits>
                </DxlMotor>
                <DxlMotor name="l_arm_z" type="MX-28" id="43" orientation="indirect" offset="0.0">
                    <angle_limits>(-90, 90)</angle_limits>
                </DxlMotor>
                <DxlMotor name="l_elbow_y" type="MX-28" id="44" orientation="direct" offset="0.0">
                    <angle_limits>(-140, 0)</angle_limits>
                </DxlMotor>
            </DxlMotorGroup>


            <DxlMotorGroup name="r_arm">
                <!-- Right Arm -->
                <DxlMotor name="r_shoulder_y" type="MX-28" id="51" orientation="indirect" offset="67.5">
                    <angle_limits>(-150, 150)</angle_limits>
                </DxlMotor>
                <DxlMotor name="r_shoulder_x" type="MX-28" id="52" orientation="indirect" offset="90">
                    <angle_limits>(-95, 95)</angle_limits>
                </DxlMotor>
                <DxlMotor name="r_arm_z" type="MX-28" id="53" orientation="indirect" offset="0.0">
                    <angle_limits>(-90, 90)</angle_limits>
                </DxlMotor>
                <DxlMotor name="r_elbow_y" type="MX-28" id="54" orientation="indirect" offset="0.0">
                    <angle_limits>(0, 147)</angle_limits>
                </DxlMotor> 
            </DxlMotorGroup>
        </DxlMotorGroup>

    </DxlController>
</Robot>