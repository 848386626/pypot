<Robot name="Poppy">
    <EEPROM>
        <return_delay_time>0</return_delay_time>
        <max_torque>100</max_torque>
        <status_return_level>2</status_return_level>
    </EEPROM>
    
    <DynamixelController type="USB2DXL" port="/dev/ttyACM0">
        
        <!-- Left Leg -->
        <DynamixelMotor name="left_hip_x" id="11" type="MX-28" orientation="direct">
            <angle_limits>(-11, 37)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="left_hip_z" id="12" type="MX-28" orientation="direct">
            <angle_limits>(-50, 3)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="left_hip_y" id="13" type="MX-28" orientation="direct">
            <angle_limits>(-108, 89)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="left_knee" id="14" type="MX-28" orientation="indirect">
            <angle_limits>(-120, 1)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="left_ankle" id="15" type="MX-28" orientation="direct">
            <angle_limits>(-35, 57)</angle_limits>
        </DynamixelMotor>
        
        <!-- Right Leg -->
        <DynamixelMotor name="right_hip_x" id="21" type="MX-28" orientation="direct">
            <angle_limits>(-39, 8)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="right_hip_z" id="22" type="MX-28" orientation="direct">
            <angle_limits>(-3, 52)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="right_hip_y" id="23" type="MX-28" orientation="direct">
            <angle_limits>(-107, 88)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="right_knee" id="24" type="MX-28" orientation="direct">
            <angle_limits>(-120, 1)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="right_ankle" id="25" type="MX-28" orientation="direct">
            <angle_limits>(-39, 56)</angle_limits>
        </DynamixelMotor>
         
         <!-- Torso -->
        <DynamixelMotor name="abdo_y" id="31" type="MX-28" orientation="direct">
            <angle_limits>(-16, 39)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="abdo_x" id="32" type="MX-28" orientation="direct">
            <angle_limits>(-35, 35)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="abdo_z" id="33" type="MX-28" orientation="direct">
            <angle_limits>(-80, 80)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="shoulder_y" id="34" type="MX-28" orientation="direct">
            <angle_limits>(-21, 41)</angle_limits>
        </DynamixelMotor>
        <DynamixelMotor name="shoulder_x" id="35" type="MX-28" orientation="direct">
            <angle_limits>(-30, 30)</angle_limits>
        </DynamixelMotor>

        <!-- Head -->
        <DynamixelMotor name="head_z" id="36" type="MX-28" orientation="direct">
            <angle_limits>(-100, 100)</angle_limits>
        </DynamixelMotor>
        <!--
        <DynamixelMotor name="head_y" id="37" type="MX-28" orientation="direct">
            <angle_limits>(-10, 10)</angle_limits>
        </DynamixelMotor>
         -->
        
    </DynamixelController>
</Robot>